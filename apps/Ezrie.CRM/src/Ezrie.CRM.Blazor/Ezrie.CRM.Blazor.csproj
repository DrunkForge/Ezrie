		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" PrivateAssets="all" Version="$(MicrosoftPackageVersion)" />
		<PackageReference Include="Syncfusion.Blazor.Grid" Version="20.1.0.58" />
		<PackageReference Include="Syncfusion.Blazor.Schedule" Version="20.1.0.58" />
		<PackageReference Include="Syncfusion.Blazor.Themes" Version="20.1.0.58" />
